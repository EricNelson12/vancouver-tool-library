---
import { getNextOpeningTime, formatTime } from '../utils/businessHours';
---

<div id="opening-status-banner" class="bg-blue-100 text-blue-800 py-2 px-4 text-center">
  Loading opening hours...
</div>

<script>
  import { updateOpeningStatus } from '../utils/openingStatus.js';
  
  // Run on page load
  document.addEventListener('DOMContentLoaded', updateOpeningStatus);
  
  // Update every minute
  setInterval(updateOpeningStatus, 60000);
</script> 